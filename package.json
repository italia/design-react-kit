{
  "name": "design-react-kit",
  "description": "Componenti React per Bootstrap 4",
  "keywords": [
    "react",
    "bootstrap",
    "bootstrap-italia"
  ],
  "author": "Presidenza del Consiglio dei Ministri",
  "contributors": [
    "Gianluca Esposito",
    "Matteo Manchi",
    "Paolo Mariotti",
    "Marco Liberati",
    "Francesco Zaia",
    "Sanyam Dogra",
    "Silvio Relli"
  ],
  "bugs": {
    "url": "https://github.com/italia/design-react-kit/issues"
  },
  "version": "3.4.0",
  "license": "MIT",
  "module": "dist/design-react-kit.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/design-react-kit.esm.js",
    "default": "./dist/design-react-kit.esm.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/italia/design-react-kit.git"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "svg:import": "svgr -d src/Icon/assets node_modules/bootstrap-italia/src/svg && echo \"\" >> src/Icon/assets/index.tsx",
    "prebuild": "npm run svg:import",
    "build": "tsdx build --format cjs,esm,umd",
    "test": "tsdx test --passWithNoTests --coverage --maxWorkers=50%",
    "lint": "npx eslint src stories test --ext js,ts,tsx,jsx,mdx",
    "prepare": "tsdx build --format cjs,esm,umd",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prestorybook": "npm run svg:import",
    "storybook": "start-storybook -p 9001",
    "storybook:build": "build-storybook -c .storybook -s ./static",
    "storybook:deploy": "npx gh-pages -d storybook-static -m 'Update GitHub Pages [ci skip]'"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/design-react-kit.cjs.production.min.js",
      "limit": "500 KB"
    },
    {
      "path": "dist/design-react-kit.esm.js",
      "limit": "500 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@rollup/plugin-url": "^6.0.0",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@skypack/package-check": "^0.2.2",
    "@storybook/addon-a11y": "^6.2.7",
    "@storybook/addon-essentials": "^6.2.7",
    "@storybook/addon-links": "^6.2.7",
    "@storybook/addon-storyshots": "^6.2.9",
    "@storybook/addons": "^6.2.7",
    "@storybook/react": "^6.2.7",
    "@svgr/cli": "^5.5.0",
    "@svgr/rollup": "^5.5.0",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/is-number": "^7.0.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-select": "^4.0.15",
    "@types/react-transition-group": "^4.4.1",
    "babel-loader": "^8.2.2",
    "bootstrap-italia": "^1.4.3",
    "circular-dependency-plugin": "^5.2.2",
    "classnames": "^2.3.1",
    "eslint-plugin-mdx": "^1.13.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-transform-stub": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "size-limit": "^4.10.2",
    "ts-jest": "^25.3.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typeface-lora": "^1.1.13",
    "typeface-roboto-mono": "^1.1.13",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "react-select": "^4.3.0",
    "react-stickup": "^1.12.0",
    "react-toastify": "^7.0.3",
    "react-transition-group": "^4.4.1",
    "reactstrap": "^8.9.0",
    "webfontloader": "^1.6.28"
  },
  "browserslist": [
    "defaults",
    "ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "edge >= 13",
    "safari 11"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)$": "ts-jest",
      ".(js|jsx)$": "babel-jest",
      "^.+\\.mdx$": "@storybook/addon-docs/jest-transform-mdx"
    },
    "moduleNameMapper": {
      "^.+.(svg|png|jpg)$": "jest-transform-stub",
      "^.+\\.css$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "mdx"
    ]
  }
}